{
  "name": "Enhance Beyond",
  "version": "0.1.0",
  "description": "Tools to enhance DnD Beyond",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["*://*.dndbeyond.com/*"],
      "js": [
        "/content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "permissions": [
     "tabs",
     "notifications",
     "http://*/",
     "https://*/"
 ],
  "manifest_version": 2
}
